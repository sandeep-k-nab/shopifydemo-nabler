<script>
  var props = {
    product_id: "{{product.id}}",
    sku: "{{product.variants.first.sku}}",
    category: "{{product.collections.first.title}}",
    name: "{{product.title"}}",
    variant: "{{product.variants.first.title | replace: " / ", "," }}",
    is_subscription: false,
    price: "{{product.selected_or_first_available_variant.price | divided_by: 100.0 }}",
    quantity: 1,
    coupon: null,
    url: "{{product.url}}",
    image_url: "{{product.featured_image | img_url: "master" }}",
    stock_status: "{% if product.available %}in-stock{% else %}out-of-stock{% endif %}"
  }

  analytics.track('Product Viewed', props);
</script>